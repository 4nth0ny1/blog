<p id="notice"><%= notice %></p>

<div class="head-container">
  <h1>Posts</h1>
  <%= link_to 'Create Post', new_post_path, class:"btn btn-primary" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Premium</th>
       <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.content %></td>
        <td>$<%= post.premium %>0</td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
