<p id="notice"><%= notice %></p>
  <div class="head-container">
    <h1>Posts</h1>
    <%= link_to 'Create Post', new_post_path, class:"btn btn-primary" %>
  </div>

  <div class="card-container">
    <% @posts.each do |post| %>
        <div class="card" style="width: 18rem;">
          <img src="<%= post.image_link %>" class="card-img-top" style="height: 18rem;"alt="missing image">
          <div class="card-body">
            <h5 class="card-title"><%= link_to post.title, post %></h5>
            <p class="card-text"><%= post.content.truncate(100) %></p>
            <p class="card-text">Prem: <%= post.premium %></p>
            <div class="card-button">
              <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
          </div>
        </div>
    <% end %>
  </div>


