<div class="form-container">
  <%= form_with(model: post) do |form| %>
        <% if post.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

            <ul>
              <% post.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      <div class="form-container">
        <div class="form-title-container">
          <div class="field mb-3">
              <%= form.text_field :title, placeholder:"title goes here...", class:"form-control form-title" %>
          </div>

          <div class="field mb-3 premium-radio-container">
              <label class="form-label premium-form-label"><%= form.label :premium %></label>
              <div class="radio">
                <%= radio_button_tag(:premium, true) %>
                  <%= label_tag(:premium, "yes") %>
                <%= radio_button_tag(:premium, false) %>
                  <%= label_tag(:premium, "no") %>
              </div>
          </div>

          <div class="actions">
              <%= form.button %>
              <button><%= link_to 'cancel', posts_path %></button>
          </div>

        </div>

        <div class="field mb-3">
            <%= form.text_field :image_link, placeholder:"image link", class:"form-control" %>
        </div>

        <div class="field mb-3">
            <%= form.text_area :content, placeholder:"content", class:"form-control" %>
        </div>

 

      

        <% end %>
      </div>
</div>