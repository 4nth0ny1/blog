<p id="notice"><%= notice %></p>

<div class="head-container">
  <h1>Super Users</h1>
  <%= link_to 'New Super User', new_super_user_path %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      
      <th>Email</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @super_users.each do |super_user| %>
      <tr>
        <td><%= link_to super_user.first_name, super_user  %> <%= link_to super_user.last_name, super_user %></td>
        <td><%= super_user.email %></td>
        <td><%= super_user.bio %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
